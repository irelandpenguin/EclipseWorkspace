package com.irelandpenguin_08;

/**
 * 为数组服务提供工具
 * 
 * @author irelandpenguin
 * @version 1.0
 */
public class ArrayTools {
	private ArrayTools() {
	}

	public static void show(int[] array) {
		/**
		 * 遍历数组
		 * 
		 * @param array
		 *            整形数组;
		 */
		for (int i = 0; i < array.length; i++) {
			int max = array[i];
			System.out.println(max);
		}
	}

	public static int max(int[] array) {
		int max = array[0];
		for (int i = 0; i < array.length; i++) {
			int j = array[i];
			if (max < j) {
				max = j;
			}
		}
		return max;
	}
}
