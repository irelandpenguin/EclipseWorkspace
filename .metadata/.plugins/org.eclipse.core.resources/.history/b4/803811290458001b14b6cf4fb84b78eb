package com.irelandpenguin_03;

public class Person {
	//成员变量
	private String name;
	private int age;
	//构造方法
	public Person(){}
	public Person(String name,int age){
		this.name=name;
		this.age=age;
	}
	//get and set
	public void setName(String name){
		this.age=age;
	}
	public String getName(){
		return this.name;
	}
	public void setAge(int age){
		this.age=age;
	}
	public int getAge(){
		return this.age;
	}
	//成员方法
	public static void show(){
		System.out.println(this.name+"---"+this.age);
	}
	
	
	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Person p = new Person();
		p.setName("irelandpenguin");
		p.setAge(25);
		System.out.println(p.getName()+"---"+p.getAge());
		
		Person p2 = new Person("irelandpenguin2",25);
		p2.getName();
		p2.getAge();
		p2.show();
	}

}
